<Window x:Class="SklepZoologiczny.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepZoologiczny"
        mc:Ignorable="d"
         Title="Zresetuj hasło!" Height="414.764" Width="720.999" FontSize="14" Background="#30e691">
    <Border Background="White" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Zresetuj Hasło" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Wpisz nowe hasło :)" Foreground="Black"/>
            <PasswordBox Name="txtpsw" Background="LightGray" Foreground="Black" FontSize="18"/>
            <Label Content="Potwierdź hasło" Foreground="Black"/>
            <PasswordBox x:Name="txtcompsw" Background="LightGray" Foreground="Black" FontSize="18"/>
            <Button x:Name="compsw" Click="btnsafepsw" Content="Zatwierdź kod" Margin="6,20,1,10" Background="#30e691" Foreground="Black" FontSize="18" Height="31"/>

        </StackPanel>
    </Border>

</Window>
